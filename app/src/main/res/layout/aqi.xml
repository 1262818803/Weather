<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:andriod="http://schemas.android.com/apk/res/android"
    andriod:layout_width="match_parent"
    andriod:layout_height="wrap_content"
    andriod:orientation="vertical"
    andriod:layout_margin="15dp"
    andriod:background="#8000">
    <TextView
        andriod:text="空气质量"
        andriod:textSize="20sp"
        andriod:layout_marginLeft="15dp"
        andriod:layout_marginTop="15dp"
        andriod:textColor="#fff"
        andriod:layout_width="wrap_content"
        andriod:layout_height="wrap_content" />
    <LinearLayout
        andriod:layout_width="match_parent"
        andriod:layout_height="wrap_content"
        andriod:layout_margin="15dp">
        <RelativeLayout
            andriod:layout_width="0dp"
            andriod:layout_height="match_parent"
            andriod:layout_weight="1">
            <LinearLayout
                andriod:layout_centerInParent="true"
                andriod:orientation="vertical"
                andriod:layout_width="match_parent"
                andriod:layout_height="wrap_content">
                <TextView
                    andriod:layout_width="wrap_content"
                    andriod:layout_height="wrap_content"
                    andriod:layout_gravity="center"
                    andriod:textColor="#fff"
                    andriod:textSize="40sp"
                    andriod:id="@+id/aqi_text"/>
                <TextView
                    andriod:layout_width="wrap_content"
                    andriod:layout_height="wrap_content"
                    andriod:layout_gravity="center"
                    andriod:text="AQI指数"
                    andriod:textColor="#fff"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            andriod:layout_width="0dp"
            andriod:layout_height="match_parent"
            andriod:layout_weight="1">
            <LinearLayout
                andriod:layout_width="match_parent"
                andriod:layout_height="wrap_content"
                andriod:orientation="vertical"
                andriod:layout_centerInParent="true">
                <TextView
                    andriod:layout_width="wrap_content"
                    andriod:layout_height="wrap_content"
                    andriod:layout_gravity="center"
                    andriod:textColor="#fff"
                    andriod:textSize="40sp"
                    andriod:id="@+id/pm25_text"/>
                <TextView
                    andriod:layout_width="wrap_content"
                    andriod:layout_height="wrap_content"
                    andriod:layout_gravity="center"
                    andriod:text="PM2.5指数"
                    andriod:textColor="#fff"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>